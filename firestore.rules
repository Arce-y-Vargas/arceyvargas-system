rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write employee data
    match /employees/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write transactions (finances)
    match /transactions/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write invoices/facturas
    match /facturas/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write projects
    match /proyectos/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write quotes
    match /quotes/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write categories
    match /categorias/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write inventory
    match /inventory/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write vacation requests
    match /vacations/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write overtime hours
    match /horasExtras/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write payroll data
    match /planillas/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}